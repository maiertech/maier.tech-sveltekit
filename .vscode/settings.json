{
	"cssVariables.lookupFiles": [
		"**/*.css",
		"node_modules/@maiertech/sveltekit-helpers/dist/styles.css",
		"node_modules/open-props/borders.min.css",
		"node_modules/open-props/fonts.min.css",
		"node_modules/open-props/sizes.min.css"
	],

	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[markdoc]": {
		"editor.defaultFormatter": "stripe.markdoc-language-support"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},

	"files.associations": {
		"*.css": "tailwindcss",
		"*.svx": "markdown"
	},

	"git-worktree-menu.copyPaths": [".env"],
	"git-worktree-menu.worktreeDir": "/Users/thilo/Projects/maiertech/website",

	"svelte.enable-ts-plugin": true
}
